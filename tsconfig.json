{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~config": ["./config"],
      "~/*": ["src/*"],
    },

    "lib": ["ESNext"],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "strictNullChecks": true,
  },
  "include": ["src/**/*.ts", "config.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules/**/*",
    ".vscode/**/*",
  ],
}
