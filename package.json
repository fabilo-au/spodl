{
  "name": "spodl",
  "version": "1.0.0",
  "description": "Spotify -> Local",
  "main": "spodl.js",
  "type": "commonjs",
  "scripts": {
    "prestart": "npm run build",
    "start": "NODE_OPTIONS='--experimental-specifier-resolution=node' node ./dist/src/spodl.js",
    "build": "tsc -p ./tsconfig.json",
    "prebuild": "del-cli --force ./dist",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adhorrig/spodl.git"
  },
  "keywords": [
    "spotify"
  ],
  "author": "Adam Horrigan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adhorrig/spodl/issues"
  },
  "bin": {
    "spodl": "src/index.js"
  },
  "homepage": "https://github.com/adhorrig/spodl#readme",
  "dependencies": {
    "spotify-web-api-node": "^2.5.0",
    "youtube-node": "^1.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.1.0",
    "@types/node": "^18.7.23",
    "del-cli": "^5.0.0",
    "jest": "^29.1.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1"
  }
}
